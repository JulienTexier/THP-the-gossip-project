<% if @comment.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer le commentaire pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='container'>
      <br>
      <%= form_for @comment, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
        <%= label_tag 'Commentaire' %>
        <%= f.text_area :content, class: "form-control"%>
        <br>
        <%= f.submit "Editer ton commentaire", class: "btn btn-primary" %>
        <%= link_to "Supprimer le commentaire", gossip_comment_path(@comment.gossip, @comment), class: "btn btn-danger", method: :delete, data: { confirm: 'Es-tu sûr de vouloir supprimer ce commentaire?' }%> 
      <% end %>
    </div>
  </body>
</html>