<div class="container">
	<h2 class="text-center">Comments</h2>
	<% @gossip.comments.each do |comment| %>
		<div class="card">
				<div class="card-body">
						<div class="row">
								<div class="col-md-2">
										<img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
										<p class="text-secondary text-center"><%=comment.user.full_name%></p>
								</div>
								<div class="col-md-10">
										<p>
												<a class="float-left" href="#"><strong><%= comment.user.full_name%></strong></a>
										</p>
									<div class="clearfix"></div>
										<p><%= comment.content%></p>
										<p>
												<%= link_to fa_icon('edit', text: "Editer"), edit_comment_path(comment.id), class:"float-right btn btn-outline-primary ml-2" %>
												<a class="float-right btn text-white btn-danger"> <i class="fa fa-heart"></i> Like</a>
									</p>
							</div>
						</div>
				</div>
		</div>
	<% end %>
	<%= form_for @comment, as: :comment, url: :comments, method: :post do |f| %>
		<%= f.text_field :content, class: "form-control" %>
		<%= f.hidden_field :gossip_id, :value => @gossip.id %>
		<br>
		<%= f.submit "Commente !", class: "btn btn-primary" %>
	<% end %>
</div>






