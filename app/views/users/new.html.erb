<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à vous inscrire pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="panel panel-info text-center" >
      <div class="panel-heading">
          <br><h3 class="panel-title">Sign Up</h3>
      </div>
  </div>

  <%= form_for([@user]) do |f| %>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label>First name</label>
        <%= f.text_field :first_name, class: "form-control", placeholder:"Ton prénom", required: true %>
      </div>
      <div class="col-md-4 mb-3">
        <label>Last name</label>
        <%= f.text_field :last_name, class: "form-control", placeholder:"Ton nom", required: true %>
      </div>
      <div class="col-md-4 mb-3">
        <label>Email</label>
        <%= f.text_field :email, class: "form-control", placeholder:"Ton email", required: true %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label>City</label>
        <%= text_field_tag 'city', '', class: "form-control", placeholder:"Ta ville", required: "true" %>
      </div>
      <div class="col-md-4 mb-3">
        <label>Zip Code</label>
        <%= text_field_tag 'zip_code', '', class: "form-control", placeholder:"Ton code postal !", required: "true" %>
      </div>
      <div class="col-md-4 mb-3">
        <label>Age</label>
        <%= f.number_field :age, min:"0", class: "form-control", placeholder:"Ton âge", required: true %>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-12 mb-12">
        <label>Description</label>
        <%= f.text_area :description, class: "form-control", placeholder:"Ta description" %>
      </div>
      <div class="col-md-6 mb-6">
        <br><label>Mot de Passe</label>
        <%= f.password_field :password, class: "form-control", placeholder:"Ton mot de passe", required: true %>
      </div>
      <div class="col-md-6 mb-6">
        <br><label>Confirme ton mot de Passe</label>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirme ton mot de passe", required: true %>
      </div>
    </div>
    <div class="form-row">
    <div class="col-md-12 mb-12">
    <br><%= f.submit "Bienvenue chez nous", class: "btn btn-primary" %>
    </div>
    </div>
    <% end %>
  </div>
</div>
